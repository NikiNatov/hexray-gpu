//

// 1. First, some global settings
GlobalSettings {
	frameWidth          960
	frameHeight         540
	ambientLight        (0.28, 0.30, 0.35)
	maxTraceDepth		5
	wantAA				off
	prepassSamples      0
	interactive         on
	//foveatedRadius      75
}

PointLight {
	pos            (160, 80, 40)
	color          (1, 1, 1)
	power           10000
}

// 2. A camera
// (to enable the spherical lens camera (which introduces heavy spherical abberation)), replace "Camera" with "SphericalLensCamera"

Camera camera {
	pos         (45, 180, -240)
	aspectRatio  1.33333
	yaw             -171
	pitch          25
	roll            0
	fov            60
}

Plane floor {
	y        2.01
	limit    200
}

Mesh heart {
	file "geom/heart.obj"
}

BitmapTexture japanese {
	file "textures/japanese.png"
}

Lambert heartShader {
	color (1, 1, 1)
	texture  japanese
}

Node die {
	geometry heart
	shader   heartShader
	translate (0, 60, 0)
	scale (15, 15, 15)
	rotate (134, 0, 0)
}

Lambert floor_shader {
	texture japanese
}

Node floor {
	geometry floor
	shader   floor_shader
}

// 5. The cubemap environment:
CubemapEnvironment environment {
	folder "env/forest"
}
